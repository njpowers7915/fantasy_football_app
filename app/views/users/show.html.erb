<% if @message %>
  <div class="center alert">
    <p><%= @message %></p>
  </div>
<% end %>

<% if is_admin? %>
<h4>LEAGUE ADMIN</h4>
<% end %>

<h2>Welcome <%= @user.name %>!</h2><br>

<% if @user.leagues.nil? %>
  <% if is_admin? %>
    <h4><%= link_to "Create New League", new_user_league_path(@user) %></h4>
  <% else %>
    <h4>You have not been added to any leagues</h4>
  <% end %>
<% else %>
  <h4>Your Leagues:</h4><br>
  <ol>
    <% @user.leagues.each do |league| %>
      <% if !league.team.nil? %>
        <li><%= link_to league.team.name, user_team_path(@user, league.team) %> --- <%= link_to league, league_path(league) %></li><br>
      <% else %>
        <li><%= link_to "Create Team", new_user_team_path(@user, league.team) %> --- League: <%= league.name %></li><br>
      <% end %>
    <% end %>
  </ol>
<% end %>
<br>

<h4><%= link_to "Playler Stats", players_path %></h4><br>


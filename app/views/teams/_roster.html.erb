<table style='width:50%'>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Points</th>
      <th>Salary</th>
    </tr>

    <% Position.all.each do |position| %>
      <% if @team.get(position).nil? %>
        <tr class="player_profile" id="team_<%=position.name %>">
          <th><%= position.name %></th>
          <th><%= render 'add_player' %></th>
        </tr>
      <% else %>
        <tr class="player_profile" id="team_<%=position.name %>" player_id="<%=@team.get(position).id %>">
          <th><%= position.name %></th>
          <th id="player_profile" player_id="<%=@team.get(position).id %>"><%= @team.get(position).name %></th>
          <th><%= @team.get(position).points %></th>
          <th><%= @team.get(position).salary %></th>
          <th><%= render partial: 'delete_player', locals: {player: @team.get(position)} %></th>
        </tr>
      <% end %>
    <% end %>

  </table>

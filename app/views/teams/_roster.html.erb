<table style='width:50%'>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Points</th>
      <th>Salary</th>
    </tr>

    <% Position.all.each do |position| %>
      <% if @team.get(position).nil? %>
        <tr class="player_profile">
          <td><%= position.name %></td>
          <td><%= render partial: 'add_player', locals: {position: position.name} %></td>
        </tr>
      <% else %>
        <tr class="individual_profile" id="playerid-<%=@team.get(position).id%>"  colspan="4">
          <td><%= position.name %></th>
          <td><a href='#' onclick="loadPlayer('<%=@team.get(position).id%>')"><%= @team.get(position).name %></a></td>
          <td><%= @team.get(position).points %></td>
          <td><%= @team.get(position).salary %></td>
          <td><%= render partial: 'delete_player', locals: {player: @team.get(position)} %></td>
        </tr>
      <% end %>
    <% end %>

  </table>

  <script id="player-template" type="text/x-handlebars-template">
      <h5>{{name}} -- {{position}} -- {{pro_team}}</h5><br>
      <p>Salary: ${{salary}}</p><br>
      <p>Points: ${{points}}</p><br>
      <h4>Stats</h4><br>
      <ul>
        <li>TDs: {{touchdowns}}</p><br>
        <li>Passing Yards: {{pass_yards}}</li><br>
        <li>Rushing Yards: {{rush_yards}}</li><br>
        <li>Receptions: {{receptions}}</li><br>
        <li>Receiving Yards: {{rec_yards}}</li><br>
      </ul>
      <button onclick='hide()'>Hide</button>
  </script>

<h2> <%= @league.name %> </h2><br>

<% if is_admin? %>
  <h5><%= link_to "Change League Name", edit_user_league_path(@user, @league) %></h5>

  <%= render 'add_user' %>
<% end %>

<% if @league.users.empty? %>
  <h4>Add users to this league</h4>
<% else %>
  <table style='width:50%'>
    <tr>
      <th>Team Name</th>
      <th>Points</th>
      <th>User</th>
      <th></th>
      <th></th>
    </tr>
    <% @league.users.each do |user| %>
    <tr>
      <td><%= link_to user.team.name, user %></td>
      <td><%= user.team.points_total %></td>
      <td><%= user.email %></td>
      <td><%= render partial: 'songs/play_song', locals: {song: song} %></td>
      <% if @playlist.user == current_user %>
        <td><%= render partial: 'songs/delete_song', locals: {song: song} %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
<% end %>

<h4><%= link_to "Message Board", league_comments_path(@league, @comments) %></h4>
